<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.malfoy.leblanko.villes_emploi.Activity.InfosUpdate"
    tools:showIn="@layout/activity_infos_update">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/update_title_default"
            android:padding="10dp">

            <TextView
                android:id="@+id/title_infos_generales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_infos_generales"
                android:textAllCaps="true"
                android:textSize="@dimen/h4"
                android:textColor="@color/font_color1"
                android:padding="2dp"/>

        </LinearLayout>


        <EditText
            android:id="@+id/nomEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nom"
            android:text="@string/nomProfil"
            android:textSize="@dimen/h4"
            android:padding="5dp"
            android:background="@drawable/line_default"
            android:maxLines="1"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/prenomEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prenom"
            android:text="@string/prenomProfil"
            android:padding="5dp"
            android:background="@drawable/line_default"
            android:textSize="@dimen/h4"
            android:maxLines="1"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/emailEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:text="@string/res_email"
            android:textSize="@dimen/h4"
            android:padding="5dp"
            android:background="@drawable/line_bottom"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/update_title_default"
            android:padding="5dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/title_sexe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sexe"
                android:textAllCaps="true"
                android:textSize="@dimen/h4"
                android:textColor="@color/font_color1"
                android:padding="2dp"/>

        </LinearLayout>


        <CheckedTextView
            android:id="@+id/homme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/homme"
            android:background="@drawable/line_default"
            android:textSize="@dimen/h4"
            android:textColor="@color/font_color1"
            android:padding="5dp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple" />

        <CheckedTextView
            android:id="@+id/femme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/femme"
            android:background="@drawable/line_bottom"
            android:textSize="@dimen/h4"
            android:textColor="@color/font_color1"
            android:padding="5dp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="right">

            <Button
                android:id="@+id/submitUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submitUpdate"
                android:background="@drawable/button_default3"
                android:textSize="@dimen/h5"/>

            <Button
                android:id="@+id/noUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="-10dp"
                android:text="@string/noUpdate"
                android:background="@drawable/button_default3"
                android:textSize="@dimen/h5"/>



        </LinearLayout>



    </LinearLayout>

</LinearLayout>
