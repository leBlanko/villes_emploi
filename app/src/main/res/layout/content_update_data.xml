<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.malfoy.leblanko.villes_emploi.Activity.UpdateData"
    tools:showIn="@layout/activity_update_data"
    android:background="@color/background_color1">

    <!-- Infos du compte -->
    <LinearLayout
        android:id="@+id/compte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/update_title_default"
            android:padding="10dp">

            <TextView
                android:id="@+id/title_compte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_compte"
                android:textAllCaps="true"
                android:textSize="@dimen/h4"
                android:textColor="@color/font_color1"
                android:padding="2dp"/>

            <include
                android:id="@+id/compte_include"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/update_line"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/line_default">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pseudo"
                android:textColor="@color/font_color2"/>

            <TextView
                android:id="@+id/pseudoV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/res_pseudo"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/line_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textColor="@color/font_color2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/res_password"
                android:gravity="right"/>

        </LinearLayout>


    </LinearLayout>

    <!-- Infos perso -->
    <LinearLayout
        android:id="@+id/infos_perso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/update_title_default"
            android:padding="10dp">

            <TextView
                android:id="@+id/title_infos_generales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_infos_generales"
                android:textAllCaps="true"
                android:textSize="@dimen/h4"
                android:textColor="@color/font_color1"
                android:padding="2dp"/>

            <include
                android:id="@+id/infos_perso_include"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/update_line"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/line_default">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nom"
                android:textColor="@color/font_color2"/>

            <TextView
                android:id="@+id/nomV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nomProfil"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/line_default">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prenom"
                android:textColor="@color/font_color2"/>

            <TextView
                android:id="@+id/prenomV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prenomProfil"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/line_default">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="@color/font_color2"/>

            <TextView
                android:id="@+id/emailV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/res_email"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/line_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sexe"
                android:textColor="@color/font_color2"/>

            <TextView
                android:id="@+id/sexeV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/res_sexe"
                android:gravity="right"/>

        </LinearLayout>


    </LinearLayout>

    <!-- Coordonnees -->
    <LinearLayout
        android:id="@+id/coordonnees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/update_title_default"
            android:padding="10dp">

            <TextView
                android:id="@+id/title_coordonnees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_coordonnees"
                android:textAllCaps="true"
                android:textSize="@dimen/h4"
                android:textColor="@color/font_color1"
                android:padding="2dp"/>

            <include
                android:id="@+id/coordonnees_include"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/update_line"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/line_default">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile"
                android:textColor="@color/font_color2"/>

            <TextView
                android:id="@+id/mobileV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/res_mobile"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/line_default">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/adresse"
                android:textColor="@color/font_color2"/>

            <TextView
                android:id="@+id/adresseV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/res_adresse"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/line_default">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/CP"
                android:textColor="@color/font_color2"/>

            <TextView
                android:id="@+id/cpV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/res_CP"
                android:gravity="right"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/line_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ville"
                android:textColor="@color/font_color2"/>

            <TextView
                android:id="@+id/villeV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/res_ville"
                android:gravity="right"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
