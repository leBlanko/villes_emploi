<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_coach">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bilan_title"
        android:textColor="@color/material_deep_teal_500"
        android:textSize="@dimen/h3"
        android:textStyle="bold"
        android:gravity="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/barre"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_marginTop="10dp"/>

    <WebView
        android:id="@+id/bilan_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descProfil"/>

    <Button
        android:id="@+id/submit_coach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="s'abonner"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:background="@color/submit_coach"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"/>


</LinearLayout>